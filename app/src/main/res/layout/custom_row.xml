<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_friend"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/statename"
            android:text="StateName"
            android:textColor="@color/black"
            android:paddingLeft="8dp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:layout_weight="2"

            />

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:layout_marginRight="5dp"

    >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/confirmed"
            android:text="Confirmed"
            android:textStyle="bold"

            android:textAlignment="textEnd"
            android:layout_weight="1"
            />
    <TextView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:id="@+id/deltacnf"
    android:text="deltacnf"
    android:textStyle="bold"
android:textColor="@color/red"
    android:textAlignment="textEnd"
    android:layout_weight="1"
    />
</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="5dp"

            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/active"
            android:text="Active"

            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="1"
          />
            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/deltaactv"
            android:text="deltaactv"
            android:textStyle="bold"
android:textColor="@color/blue"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            />
</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="5dp"

            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/recovered"
            android:text="Recovered"

            android:textStyle="bold"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            />
            <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/deltarcvr"
            android:text="deltarcvr"
                android:textColor="@color/green"
            android:textStyle="bold"

            android:textAlignment="textEnd"
            android:layout_weight="1"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginRight="15dp"

            >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/deceased"

            android:textAlignment="textEnd"
            android:text="Deceased"
            android:textStyle="bold"
            android:layout_weight="1"

            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/deltadecs"
                android:text="deltadecs"
                android:textStyle="bold"


                android:textColor="@color/yellow"
                android:textAlignment="textEnd"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>
<TextView
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/grey"
    />
</LinearLayout>